# Trading Platform Environment Configuration
# Copy this file to .env and configure your settings
# DO NOT commit the .env file - it contains sensitive information

# API Configuration
API_ENDPOINT=https://api.example.com
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Configuration
DEFAULT_CURRENCY=USD
DEFAULT_MARKET=stocks
ENABLE_LIVE_TRADING=false

# Platform Configuration
APP_NAME=MarketMaster Pro Trading Platform
APP_VERSION=1.0.0
ENVIRONMENT=development

# Analytics and Tracking
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# Feature Flags
ENABLE_CRYPTO=true
ENABLE_FOREX=true
ENABLE_STOCKS=true
ENABLE_COMMODITIES=true

# Display Settings
DEFAULT_THEME=dark
DEFAULT_LANGUAGE=en
SHOW_INVESTOR_PROFILES=true

# Third-party Services (Optional)
NEWS_API_KEY=
MARKET_DATA_API_KEY=
